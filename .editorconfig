# EditorConfig is awesome: https://EditorConfig.org

# Top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8

# R files: 2 space indentation
[*.R]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# R Markdown files
[*.Rmd]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# JSON files
[*.json]
indent_style = space
indent_size = 2

